<PropertyList>

 <path>GMeter.ac</path>
 
 <animation>
    <object-name>Base</object-name>
    <object-name>Case</object-name>
    <object-name>Face</object-name>
    <object-name>MaxCtr</object-name>
    <object-name>MaxTip</object-name>
    <object-name>MinCtr</object-name>
    <object-name>MinTip</object-name>
    <object-name>Reset</object-name>
    <object-name>gCtr</object-name>
    <object-name>gTip</object-name>

    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>glass</object-name>
  </animation> 

  <animation>
   <type>rotate</type>
   <object-name>gTip</object-name>
   <object-name>gCtr</object-name>
   <property>accelerations/pilot-g</property>
   <factor>22.5</factor>
    <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
  </animation>

  <animation>
   <type>rotate</type>
   <object-name>MinCtr</object-name>
   <object-name>MinTip</object-name>
   <property>accelerations/pilot-gmin</property>
   <factor>22.5</factor>
    <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
  </animation>

  <animation>
   <type>rotate</type>
   <object-name>MaxCtr</object-name>
   <object-name>MaxTip</object-name>
   <property>accelerations/pilot-gmax</property>
   <factor>22.5</factor>
    <center>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </center>
    <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
    </axis>
  </animation>

  <animation>
   <type>pick</type>
   <visible>true</visible>
   <object-name>Reset</object-name>
   <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
    <command>property-assign</command>
        <property>accelerations/pilot-gmax</property>
        <property>accelerations/pilot-g</property>
    </binding>          
    <binding>
    <command>property-assign</command>
        <property>accelerations/pilot-gmin</property>
        <property>accelerations/pilot-g</property>
    </binding>          
   </action>
  </animation>

</PropertyList>