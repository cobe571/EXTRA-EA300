<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>clock.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>face</object-name>
    <object-name>hours</object-name>
    <object-name>minutes</object-name>
    <object-name>secondes</object-name>
    
    <object-name>vitre</object-name>
  </animation>

  <!-- Rembrandt -->
  <effect>
    <inherits-from>Aircraft/EA300/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>hours</object-name>
    <object-name>minutes</object-name>
    <object-name>secondes</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>hours</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor> 0.00833333333333333 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>minutes</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor> 0.1 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>secondes</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor> 6 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>