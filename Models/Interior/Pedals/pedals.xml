<PropertyList>

  <path>pedals.ac</path>

  <animation>
    <type>translate</type>
    <object-name>L-pedal</object-name>
    <property>controls/flight/rudder</property>
      <factor>0.07</factor>
        <axis>
          <x>  1  </x>
          <y>  0  </y>
          <z>  0  </z>
        </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>R-pedal</object-name>
    <property>controls/flight/rudder</property>
      <factor>0.07</factor>
        <axis>
          <x> -1  </x>
          <y>  0  </y>
          <z>  0  </z>
        </axis>
  </animation>

  <animation>
    <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
  </animation>

</PropertyList>